generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int             @id @default(autoincrement())
  email   String          @unique
  name    String?
  events  CalendarEvent[]
}

model CalendarEvent {
  id      String      @id
  title   String
  start   DateTime
  end     DateTime
  user    User     @relation(fields: [userId], references: [id])
  userId  Int

  @@unique([userId, id])
}

